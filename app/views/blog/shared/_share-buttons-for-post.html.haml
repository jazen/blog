.entry-sharing
  .flattr-wrapper
    = flattr_button_for_post(post)

  .plusone-wrapper
    - layout = (Settings.blog.plusone.layout rescue :medium)
    = plusone_button_for_post(post, "data-size" => layout)

  .addthis-wrapper
    - layout = (Settings.blog.addthis.layout rescue :pills)
    = addthis_buttons_for_post(post, :layout => layout)
