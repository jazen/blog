-# Details: http://microformats.org/wiki/hatom

%article.hentry.post{:id => "post-#{post.id}"}

  %h1.entry-title
    = link_to_post(post, :rel => "bookmark")

  .entry-meta
    .entry-published
      = pretty_date(post.published_at, :class => "published")

    .entry-author
      = t(".written_by")
      = pretty_author(post.user)

  = addthis_buttons :url => public_post_url(post), :title => post.title, :description => truncate(post.body, :length => 250)

  .entry-content
    = textilize(post.body)

  .entry-tags
    = render "tags", :tags => post.tags
