-# Details: http://microformats.org/wiki/hatom

%article.hentry.post{:id => "post-#{post.id}"}

  %h1.entry-title
    = link_to_post(post, :rel => "bookmark")

  = pretty_date(post.published_at, :class => "published")

  .entry-author
    = t(".written_by")
    = pretty_author(post.user)

  .entry-content
    = post.body
