%article.hentry.post{:id => "post-#{post.id}"}
  %header
    = render "blog/shared/share-buttons-for-post", :post => post

    %h1.entry-title.post-title
      = link_to_post(post,
      :text => textilize_without_paragraph(post.title),
      :rel => "bookmark")

    .entry-meta
      - if date = post.published_at
        .entry-published
          = pretty_date(date, :class => "published")

      .entry-author
        = t(".written_by")
        = pretty_author(post.user)

  .entry-content.post-body
    = textilize(post.body)

  %footer
